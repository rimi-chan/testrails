<h2>スケジュール一覧</h2>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>


<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>スケジュール更新日時</th>
      <th>確認</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
   <% @mains.each do |main| %>
    <tr>
      <td><%= main.id %></td>
      <td><%= main.title %></td>
      <td><%= main.start_at.to_s(:date_jp) %></td>
      <td><%= main.end_at.to_s(:date_jp) %></td>
      <td><%= main.checkbox %></td>
      <td><%= main.updated_at.to_s(:datetime_jp) %></td>
    </tr>
   <% end %>
  </tbody>
</table>
<p><%= link_to"スケジュール新規登録", :new_main%></p>
